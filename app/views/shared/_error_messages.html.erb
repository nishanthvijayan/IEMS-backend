<% if @regular_user.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
		The form contains <%= pluralize(@regular_user.errors.count, "error") %>.
		</div>
		<ul>
			<% @regular_user.errors.full_messages.each do |msg| %>
				<%= content_tag :li, msg, :class => "error-message" %>
			<% end %>
		</ul>
	</div>
<% end %>
