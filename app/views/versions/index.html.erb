<br>
<br>

<ul>
  <% @versions.each do |version| %>
    <p>
      <div class='row'>

        <% if version.item_type == 'Transaction' %>
          <%= transaction_change_desc(version.event, version.whodunnit) %>
        <% elsif version.item_type == 'GuestUser' %>
          <%= guest_change_desc(version.item_id, version.event, version.whodunnit) %>
        <% elsif version.item_type == 'RegularUser' %>
          <%= user_change_desc(version.item_id, version.event, version.whodunnit) %>
        <% end %>

        <% if version.event == 'update' %>
          <div class="pull-right btn-group">
            <%= link_to '#', class: 'btn btn-primary btn-sm' do
              content_tag :span, 'View Changes'
            end %>

            <%= link_to '#', class: 'btn btn-danger btn-sm', data: { confirm: "Revert Changes? Are you sure?"} do
              content_tag :span, 'Revert Changes'
            end %>
          </div>
        <% end %>
        <br><br><hr>

      </div>
    </p>
  <% end %>
</ul>
<div class="center">
  <%= will_paginate %>
</div>