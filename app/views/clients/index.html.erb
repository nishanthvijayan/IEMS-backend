<br><br>
<%= link_to 'Register New Client', new_client_path, class: 'pull-right btn btn-success' %>
<br><br><br>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Auth token</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.auth_token %></td>
        <td>
          <div class="btn-group">
            <%= link_to edit_client_path(client), class: 'btn btn-primary' do
              content_tag :span, " ", class: "glyphicon glyphicon-pencil"
            end %>

            <%= link_to client_path(client), method: :delete, class: 'btn btn-danger', data: { confirm: "Delete transaction? Are you sure?"} do
              content_tag :span, " ", class: "glyphicon glyphicon-trash"
            end %>
          </div>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
